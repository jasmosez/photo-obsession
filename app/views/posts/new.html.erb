<div class="partial-wrapper">
  <h1>Create New Post for <%= @current_user.username %></h1>

  <div class="form-group">
    <%= form_for @post do |f| %>
        <%= f.hidden_field(:user_id, value: @current_user.id) %>
        <%= f.label :img_url %>
        <%= f.text_field :img_url, class: "form-control" %><br>
        <%= f.label :caption %>
        <%= f.text_field :caption, class: "form-control" %><br>
        <%= f.submit "Post!", class: "btn btn-outline-primary" %>
      <% end %>
    </div>
  </div>