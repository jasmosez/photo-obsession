<h1>Edit Post for <%= @current_user.username %></h1>

<%= form_for @post do |f| %>
    <%= f.hidden_field(:user_id, value: @current_user.id) %>
    <%= f.label :caption %>
    <%= f.text_field :caption %><br>
    <%= f.submit "Update Post!" %>
  <% end %>
<%= button_to "Delete Post", post_path(@post), method: :delete %>