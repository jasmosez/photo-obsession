<h1><%= @user.username %>'s Profile</h1>

<% @posts.each do |p| %>
       <%= render '/posts/item', :p => p %>
       <%= render '/comments/comments_show', :p => p %>
       <br><hr>
<% end %>

<% if @user == @current_user %>
    <%= button_to "Create New Post", new_post_path(@post), method: :get %>
    <%= button_to "Update Profile", edit_user_path(@current_user), method: :get %>
    <%= button_to "Delete Profile", user_path(@current_user), method: :delete %>
<% end %>
