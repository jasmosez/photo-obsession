<h1>Sign Up!</h1>

<% if flash[:messages] %>
  <% flash[:messages].each do |message| %>
    <div class="error_message">
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username, required: true %><br>
  <%= f.label :password %>
  <%= f.password_field :password, required: true %><br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, required: true %><br>
  <%= f.submit %>
<% end %>